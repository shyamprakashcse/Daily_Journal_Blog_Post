<%- include("Partials/Header"); %>

    <div class="homediv">
        <h1>Home</h1>
        <p>
            <%=STARTINGCONTENT %>
        </p>
    </div>

    <% for(var i=0;i<posts.length;i++){ %>
        <div class="postdiv">
            <h1>
                <%=posts[i].title%>
            </h1>
            <p>
                <%=posts[i].content.substring(0,100)+"..."%>
                    <a href="/posts/<%=posts[i].title%>">Read More</a>
            </p>



            <p class="date">Articles Published at
                <%=posts[i].date%>
            </p>
        </div>

        <%}%>

            <%- include("partials/Footer"); %>